@model CategoryVW

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
			@*<div asp-validation-summary="All"></div>*@
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label> @*отображение имени свойства*@
			<input asp-for="Name" class="form-control" /> @*создание формы под заполнение свойства*@
			<span asp-validation-for="Name" class="text-danger"></span> @*проверка заполнения формы*@
		</div>

		<div class="mb-3">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to list
		</a>

	</div>

</form>
